public class DownArrow {
    public static void main(String[] args) {
        int i,j,n=4;
        for(i =0;i<=n;i++)
        {
            for(j=-n;j<=n;j++)
            {
                if(-(n-i)<j && j<(n-i))
                    System.out.print("  ");
                else    
                    System.out.print("* ");
            }
            System.out.println();
        }
    }
}


